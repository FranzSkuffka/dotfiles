
#!/bin/sh
# This shell script is PUBLIC DOMAIN. You may do whatever you want with it.

CURRENTUSEREMAIL=$(git config user.email)
PRIVATE="jottenwe@gmail.com"
BUSINESS="jan.wirth@mercedes-benz.io"

if [ "$CURRENTUSEREMAIL" != "$BUSINESS" ]; then
    git config --global user.email "$BUSINESS"
else
    git config --global user.email "$PRIVATE"
fi

echo "switched to $(git config user.email)"
